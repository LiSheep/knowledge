<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id="userDao" class="com.knowledge.user.UserDao">
		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
	</bean>
	
	<bean id="userServices" class="com.knowledge.user.UserServices">
		<property name="userDao" ref="userDao"></property>
		<property name="dictionaryServices" ref="dictionaryServices"></property>
	</bean>
	
	<bean id="userAction" class="com.knowledge.user.UserAction">
		<property name="userServices" ref="userServices"></property>
	</bean>
</beans>
